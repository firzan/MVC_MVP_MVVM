<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable name="callback" type = "spm.mvc_mvp_mvvm.mvvm_room_lifecycle_dagger.listeners.MoviesClickCallback"/>
        <variable name="movie" type = "spm.mvc_mvp_mvvm.mvvm_room_lifecycle_dagger.dto.Movie"/>
    </data>


    <!--android:onClick="@{() ->  callback.onClick(project)}"

-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/item_horizontal_margin"
                android:layout_marginStart="@dimen/item_horizontal_margin"
                android:layout_weight="8"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvMovieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_name"
                    android:text="@{movie.MoviesTitle}"
                    android:textSize="@dimen/project_text"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_language"
                    android:text="@{movie.MoviesTitle}"
                    android:textSize="@dimen/project_text" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvRealeseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/project_watchers"
                    android:text="@{movie.MoviesRelease_date}"
                    android:textSize="@dimen/project_text" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>